#cloud-config

coreos:
  etcd:
    # generate a new token for each unique cluster from https://discovery.etcd.io/new
    # WARNING: replace each time you 'vagrant destroy'
    addr: $public_ipv4:4001
    peer-addr: $public_ipv4:7001
    peers: 172.17.8.101:7001,172.17.8.102:7001
  fleet:
    public-ip: $public_ipv4
  units:
    - name: etcd.service
      command: start
    - name: fleet.service
      command: start
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=2375
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
    - name: consul.service
      command: start
      content: |
        [Unit]
        Description=Consul Server
        After=docker.service
        After=etcd.service
        After=fleet.service
        [Service]
        Restart=always
        RestartSec=10
        ExecStartPre=-/usr/bin/docker kill consul
        ExecStartPre=-/usr/bin/docker rm consul
        ExecStartPre=/usr/bin/docker pull progrium/consul
        ExecStart=/bin/bash -c "eval $(/usr/bin/docker run --rm progrium/consul cmd:run $private_ipv4::172.17.8.101)"
        ExecStop=/usr/bin/docker stop consul
    - name: swarm-agent.service
      command: start
      content: |
        [Unit]
        Description=Docker Swarm Agent
        After=consul.service
        [Service]
        Restart=always
        RestartSec=10
        ExecStartPre=-/usr/bin/docker kill swarm-agent
        ExecStartPre=-/usr/bin/docker rm swarm-agent
        ExecStartPre=/usr/bin/docker pull swarm
        ExecStart=/usr/bin/docker run --rm --name swarm-agent swarm join --addr=$private_ipv4:2375 consul://$private_ipv4:8500/swarm
        ExecStop=/usr/bin/docker stop swarm-agent
